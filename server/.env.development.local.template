# Server Environment Configuration Template
# Copy this file to .env.development.local and fill in your actual values

NODE_ENV=development
PORT=3000
SERVER_URL=http://localhost:3000

# MongoDB Atlas Configuration
# Replace with your actual Atlas connection string
# Format: mongodb+srv://<username>:<password>@cluster0.s6tkgs1.mongodb.net/renewly?retryWrites=true&w=majority&appName=Cluster0
DB_URI=mongodb+srv://<username>:<password>@cluster0.s6tkgs1.mongodb.net/renewly?retryWrites=true&w=majority&appName=Cluster0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Arcjet Configuration (for rate limiting and security)
ARCJET_ENV=development
ARCJET_KEY=your-arcjet-key-here

# QStash Configuration (for background jobs)
QSTASH_TOKEN=your-qstash-token-here
QSTASH_URL=https://qstash.upstash.io/v2/publish/

# Email Configuration
EMAIL_PASSWORD=your-email-password-here
